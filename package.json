{
  "name": "@fessional/razor",
  "type": "module",
  "version": "0.1.0",
  "description": "Use front-end tech (Nuxt/Ts) to build multi-platform from one codebase, suitable for small team and app to write app once, apply almost anywhere.",
  "packageManager": "pnpm@9.10.0",
  "engines": {
    "node": "20",
    "pnpm": "9"
  },
  "scripts": {
    "deps": "taze -r",
    "feat": "changeset",
    "bump": "changeset version",
    "pure": "rimraf --glob '**/node_modules/'"
  },
  "devDependencies": {
    "taze": "catalog:devops",
    "rimraf": "catalog:devops",
    "@changesets/cli": "catalog:devops"
  },
  "hoistLayer": [
    "@fessional/razor-common",
    "@fessional/razor-mobile"
  ]
}